@model IEnumerable<BaseLib.CategoryModel>

@{
    ViewBag.Title = "CategoryList";
    Layout = null;
}

<h2>CategoryList</h2>

<p>
    @Html.ActionLink("Create New", "CategoryAdd")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "CategoryUpdate", new {  id=item.CategoryID  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.CategoryID }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.CategoryID})
        </td>
    </tr>
}

</table>
